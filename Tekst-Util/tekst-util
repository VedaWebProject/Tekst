# :command.usage
tekst_util_usage() {
  if [[ -n $long_usage ]]; then
    printf "tekst-util - Tekst Maintenance Utility Script\n"
    echo

  else
    printf "tekst-util - Tekst Maintenance Utility Script\n"
    echo

  fi

  printf "%s\n" "Usage:"
  printf "  tekst-util COMMAND\n"
  printf "  tekst-util [COMMAND] --help | -h\n"
  printf "  tekst-util --version | -v\n"
  echo
  # :command.usage_commands
  printf "%s\n" "Commands:"
  printf "  %s   Create DB backup (MongoDB service must be running)\n" "backup     "
  printf "  %s   Restore DB backup (MongoDB service must be running)\n" "restore    "
  printf "  %s   Migrate DB data to newer version (MongoDB service must be running)\n" "migration  "
  printf "  %s   Create/update search index (MongoDB and ES services must be running)\n" "index      "
  printf "  %s   Run resource maintenance routines (MongoDB service must be running)\n" "maintenance"
  echo

  # :command.long_usage
  if [[ -n $long_usage ]]; then
    printf "%s\n" "Options:"

    # :command.usage_fixed_flags
    printf "  %s\n" "--help, -h"
    printf "    Show this help\n"
    echo
    printf "  %s\n" "--version, -v"
    printf "    Show version number\n"
    echo

  fi
}

