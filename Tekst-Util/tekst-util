# :command.parse_requirements
parse_requirements() {
  # :command.fixed_flags_filter
  while [[ $# -gt 0 ]]; do
    case "${1:-}" in
      --version | -v)
        version_command
        exit
        ;;

      --help | -h)
        long_usage=yes
        tekst_util_usage
        exit
        ;;

      *)
        break
        ;;

    esac
  done

  # :command.command_filter
  action=${1:-}

  case $action in
    -*) ;;

    backup)
      action="backup"
      shift
      tekst_util_backup_parse_requirements "$@"
      shift $#
      ;;

    restore)
      action="restore"
      shift
      tekst_util_restore_parse_requirements "$@"
      shift $#
      ;;

    migration)
      action="migration"
      shift
      tekst_util_migration_parse_requirements "$@"
      shift $#
      ;;

    index)
      action="index"
      shift
      tekst_util_index_parse_requirements "$@"
      shift $#
      ;;

    maintenance)
      action="maintenance"
      shift
      tekst_util_maintenance_parse_requirements "$@"
      shift $#
      ;;

    # :command.command_fallback
    "")
      tekst_util_usage >&2
      exit 1
      ;;

    *)
      printf "invalid command: %s\n" "$action" >&2
      exit 1
      ;;

  esac

  # :command.parse_requirements_while
  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in

      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;

      *)
        # :command.parse_requirements_case
        # :command.parse_requirements_case_simple
        printf "invalid argument: %s\n" "$key" >&2
        exit 1

        ;;

    esac
  done

}

# :command.parse_requirements
tekst_util_backup_parse_requirements() {
  # :command.fixed_flags_filter
  while [[ $# -gt 0 ]]; do
    case "${1:-}" in
      --help | -h)
        long_usage=yes
        tekst_util_backup_usage
        exit
        ;;

      *)
        break
        ;;

    esac
  done

  # :command.command_filter
  action="backup"

  # :command.parse_requirements_while
  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in
      # :flag.case
      --container-name | -c)

        # :flag.case_arg
        if [[ -n ${2+x} ]]; then
          args['--container-name']="$2"
          shift
          shift
        else
          printf "%s\n" "--container-name requires an argument: --container-name, -c CONTAINER" >&2
          exit 1
        fi
        ;;

      # :flag.case
      --file | -f)

        # :flag.case_arg
        if [[ -n ${2+x} ]]; then
          args['--file']="$2"
          shift
          shift
        else
          printf "%s\n" "--file requires an argument: --file, -f PATH" >&2
          exit 1
        fi
        ;;

      # :flag.case
      --mongodb-uri | -m)

        # :flag.case_arg
        if [[ -n ${2+x} ]]; then
          args['--mongodb-uri']="$2"
          shift
          shift
        else
          printf "%s\n" "--mongodb-uri requires an argument: --mongodb-uri, -m URI" >&2
          exit 1
        fi
        ;;

      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;

      *)
        # :command.parse_requirements_case
        # :command.parse_requirements_case_simple
        printf "invalid argument: %s\n" "$key" >&2
        exit 1

        ;;

    esac
  done

  # :command.default_assignments
  [[ -n ${args['--file']:-} ]] || args['--file']="/tmp/tekst-util.backup"
  [[ -n ${args['--mongodb-uri']:-} ]] || args['--mongodb-uri']="mongodb://127.0.0.1:27017"

}

