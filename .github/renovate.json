{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly"
  ],
  "baseBranches": ["development"],
  "prHourlyLimit": 1,
  "labels": ["dependencies"],
  "reviewers": ["bkis"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major", "minor"],
      "matchPackageNames": ["typescript"],
      "automerge": false
    }
  ]
}
